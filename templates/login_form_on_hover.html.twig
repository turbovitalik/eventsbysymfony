<div class="dropdown-content">
    <form class="px-4 py-3" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf() %}
            <input type="hidden" name="_csrf_token" value="{{ csrf() }}" />
        {% endif %}
        <div class="form-group">
            <label for="loginDropdownFormEmail1">E-Mail-Adresse</label>
            <input name="_email" type="email" class="form-control" html-autocomplete="off" id="loginDropdownFormEmail1" placeholder="E-Mail-Adresse*" required>
        </div>
        <div class="form-group">
            <label for="loginDropdownFormPassword1">Kennwort</label>
            <input name="_password" type="password" class="form-control" id="loginDropdownFormPassword1" placeholder="Passwort*" required >
        </div>
        <button name="_submit" type="submit" id="loginDropdownFormSubmit" class="btn btn-primary">Login</button>
    </form>
    <a class="dropdown-item" href="{{path('fos_user_resetting_request')}}">Kennwort vergessen?</a>
    <a class="dropdown-item" href="{{path('register')}}">Noch kein Mitglied?</a>
</div>